<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:background="@android:color/white"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_blog_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/all_category_img" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_blog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/iv_blog_category"
        android:layout_toStartOf="@id/iv_blog_search"
        app:tl_divider_color="#1A000000"
        app:tl_divider_padding="13dp"
        app:tl_divider_width="1dp"
        app:tl_indicator_color="#aaFF0000"
        app:tl_indicator_height="1.5dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_padding="22dp"
        app:tl_tab_space_equal="false"
        app:tl_textSelectColor="#aaFF0000"
        app:tl_textUnselectColor="#66000000"
        app:tl_underline_color="@android:color/white"
        app:tl_underline_height="1dp"/>

    <ImageView
        android:id="@+id/iv_blog_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/guide_search" />

    <View
        style="@style/view_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>