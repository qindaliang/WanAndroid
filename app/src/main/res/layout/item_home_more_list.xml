<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_home_more_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="8dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_item_more_head"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitXY"
            app:riv_oval="true" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_item_more_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textStyle="bold" />

        <View style="@style/view_weight" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_more_arrow_dark" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="40dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_item_more_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/text_background"
            android:text="# 标题"
            android:textColor="@color/text_red"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_item_more_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_item_more_title1"
            android:textColor="@color/text_black"
            android:textStyle="bold" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="45dp"
        android:visibility="gone"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_item_more_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_item_more_pic"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_below="@id/tv_item_more_desc"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:visibility="gone" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="45dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/iv_item_more_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:src="@mipmap/all_category_img" />

        <TextView
            android:id="@+id/tv_item_more_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_item_more_count"
            android:textColor="@color/text_black"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/iv_item_more_time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@id/tv_item_more_time"
            android:src="@mipmap/all_category_img" />

        <TextView
            android:id="@+id/tv_item_more_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black"
            android:textSize="11sp" />

    </RelativeLayout>

    <View style="@style/view_line_match" />
</LinearLayout>